---
import Layout from '../layouts/Layout.astro';
import Title from '../components/Title.astro';

const featuredProject = {
    title: 'Dyor',
    description: 'AI-powered decentralized investing app with social features.',
    technologies: ['TypeScript', 'Go', 'Node.js', 'NestJS', 'React Native', 'AWS'],
    thumbnailImage: '/src/assets/images/projects/dyor_thumbnail.png',
    showcaseImage: '/src/assets/images/projects/dyor_showcase.png',
    link: 'https://dyor.exchange',
};

const projects = [
    {
        id: 1,
        title: 'RIDO',
        description: 'Gamified cycling app built on web3.',
        technologies: ['TypeScript', 'Node.js', 'PostgreSQL', 'AWS'],
        image: '/src/assets/images/projects/rido_thumbnail.png',
        link: 'https://rido.app',
    },
    {
        id: 2,
        title: 'NFA',
        description: 'Crypto Gateway to Community Quests.',
        technologies: ['TypeScript', 'Node.js', 'PostgreSQL', 'Telegram', 'DigitalOcean'],
        image: '/src/assets/images/projects/nfa_thumbnail.png',
        link: 'https://masoodbuilds.com/nfa',
    },
    {
        id: 3,
        title: 'FOMO',
        description: 'Meme token trading powered by AI signals.',
        technologies: ['TypeScript', 'Node.js', 'PostgreSQL', 'Telegram', 'Google Cloud'],
        image: '/src/assets/images/projects/fomo_thumbnail.png',
        link: 'https://apeinfomo.app',
    },
    {
        id: 4,
        title: 'Peer Market',
        description: 'P2P platform built on tron.',
        technologies: ['TypeScript', 'TRON', 'PostgreSQL', 'Telegram', 'AWS'],
        image: '/src/assets/images/projects/pmkt_thumbnail.png',
        link: 'https://masoodbuilds.com/pmkt',
    },
    {
        id: 5,
        title: 'L Pay',
        description: 'Next generation crypto payment system using non-custodial smart contracts.',
        technologies: ['TypeScript', 'Go', 'Base', 'PostgreSQL', 'AWS'],
        image: '/src/assets/images/projects/lpay_thumbnail.png',
        link: 'https://masoodbuilds.com/lpay',
    },
    {
        id: 6,
        title: 'U Work',
        description:
            'On-demand skilled trades marketplace connecting homeowners with verified professionals.',
        technologies: ['TypeScript', 'Node.js', 'PostgreSQL', 'AWS'],
        image: '/src/assets/images/projects/uwork_thumbnail.png',
        link: 'https://masoodbuilds.com/uwork',
    },
];
---

<Layout>
    <Title
        title="Work"
        subtitle="A collection of services & apps I’ve architected — shaped by years of hands-on experience."
    />

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-16">
        <!-- Featured Project-->
        <div class="mb-16 md:mb-24">
            <h2 class="text-3xl font-bold text-center mb-12 text-[#213555] dark:text-[#f5efe7]">
                Currently Working On
            </h2>
            <div
                class="bg-[#f5efe7]/50 dark:bg-[#2E466B] rounded-2xl overflow-hidden shadow-xl border border-[#D8C4B6]/20 dark:border-[#3E5879]/40"
            >
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                    <div class="p-8 md:p-12 flex flex-col justify-center">
                        <div class="flex flex-row items-start gap-6 mb-6">
                            <div
                                class="w-24 h-24 min-w-[6rem] rounded-lg overflow-hidden flex-shrink-0 bg-[#D8C4B6]/20 dark:bg-[#3E5879]/30 hidden md:block"
                            >
                                {
                                    featuredProject.thumbnailImage ? (
                                        <img
                                            src={featuredProject.thumbnailImage}
                                            alt={`${featuredProject.title} thumbnail`}
                                            class="w-full h-full object-cover"
                                        />
                                    ) : (
                                        <div class="w-full h-full flex items-center justify-center text-[#213555]/40 dark:text-[#f5efe7]/40 text-xs">
                                            No image
                                        </div>
                                    )
                                }
                            </div>
                            <div>
                                <h3
                                    class="text-2xl md:text-3xl font-bold mb-4 text-[#213555] dark:text-[#f5efe7]"
                                >
                                    {featuredProject.title}
                                </h3>
                                <p class="text-lg text-[#213555]/80 dark:text-[#f5efe7]/90 mb-6">
                                    {featuredProject.description}
                                </p>
                            </div>
                        </div>

                        <div class="flex flex-wrap gap-2 mb-8">
                            {
                                featuredProject.technologies.map((tech) => (
                                    <span class="inline-block px-3 py-1 text-sm rounded-full bg-[#D8C4B6]/40 dark:bg-[#3E5879] text-[#213555] dark:text-[#f5efe7]">
                                        {tech}
                                    </span>
                                ))
                            }
                        </div>

                        <a
                            href={featuredProject.link}
                            class="inline-flex items-center rounded-lg bg-[#D8C4B6] dark:bg-[#3E5879] px-6 py-3 text-[#213555] dark:text-[#f5efe7] font-medium hover:opacity-90 transition-opacity"
                        >
                            Case Study
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="h-5 w-5 ml-2"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                            </svg>
                        </a>
                    </div>
                    <div class="relative flex items-center justify-center p-6 md:p-0">
                        <div
                            class="w-full h-64 md:h-full bg-[#D8C4B6]/20 dark:bg-[#3E5879]/50 rounded-lg md:rounded-none overflow-hidden"
                        >
                            {
                                featuredProject.showcaseImage ? (
                                    <img
                                        src={featuredProject.showcaseImage}
                                        alt={`${featuredProject.title} showcase`}
                                        class="w-full h-full object-cover"
                                    />
                                ) : (
                                    <div class="w-full h-full flex items-center justify-center text-[#213555]/60 dark:text-[#f5efe7]/60">
                                        <span>Project Screenshot</span>
                                    </div>
                                )
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Projects -->
        <h2 class="text-3xl font-bold text-center mb-12 text-[#213555] dark:text-[#f5efe7]">
            Selected Works
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-10">
            {
                projects.map((project) => (
                    <div class="group relative overflow-hidden rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 bg-white dark:bg-[#2E466B] hover:-translate-y-2">
                        <div class="absolute top-0 left-0 w-full h-2 bg-[#D8C4B6] dark:bg-[#3E5879]" />
                        <div class="p-6 md:p-8">
                            <div class="flex flex-row items-start gap-4">
                                <div class="w-20 h-20 min-w-[5rem] rounded-md overflow-hidden flex-shrink-0 bg-[#D8C4B6]/20 dark:bg-[#3E5879]/30">
                                    {project.image ? (
                                        <img
                                            src={project.image}
                                            alt={`${project.title} thumbnail`}
                                            class="w-full h-full object-cover"
                                        />
                                    ) : (
                                        <div class="w-full h-full flex items-center justify-center text-[#213555]/40 dark:text-[#f5efe7]/40 text-xs">
                                            No image
                                        </div>
                                    )}
                                </div>
                                <div class="flex-1">
                                    <h3 class="text-2xl font-bold mb-3 text-[#213555] dark:text-[#f5efe7]">
                                        {project.title}
                                    </h3>
                                    <p class="text-[#213555]/80 dark:text-[#f5efe7]/90 mb-5">
                                        {project.description}
                                    </p>
                                </div>
                            </div>

                            <div class="mb-6 flex flex-wrap gap-2 mt-4">
                                {project.technologies.map((tech) => (
                                    <span class="inline-block px-3 py-1 text-sm rounded-full bg-[#D8C4B6]/30 dark:bg-[#3E5879] text-[#213555] dark:text-[#f5efe7]">
                                        {tech}
                                    </span>
                                ))}
                            </div>

                            <a
                                href={project.link}
                                class="inline-flex items-center text-sm font-medium transition-colors text-[#213555] dark:text-[#f5efe7] group-hover:text-[#D8C4B6] dark:group-hover:text-[#D8C4B6]"
                            >
                                View project
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="h-4 w-4 ml-1 group-hover:translate-x-1 transition-transform"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M14 5l7 7m0 0l-7 7m7-7H3"
                                    />
                                </svg>
                            </a>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</Layout>
