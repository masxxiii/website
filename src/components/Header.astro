---
// Header.astro
const currentPath = Astro.url.pathname;
---

<header class="sticky top-0 z-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <nav
            class="flex flex-wrap justify-center items-center gap-4 sm:gap-6 md:gap-12 py-4 text-base sm:text-lg font-medium"
        >
            <a
                href="/"
                class={`px-4 py-2 rounded-full transition ${
                    currentPath === '/'
                        ? 'bg-[#D8C4B6] dark:bg-[#3E5879]'
                        : 'hover:bg-[#D8C4B6] dark:hover:bg-[#3E5879]'
                }`}
            >
                About
            </a>
            <a
                href="/work"
                class={`px-4 py-2 rounded-full transition ${
                    currentPath === '/work'
                        ? 'bg-[#D8C4B6] dark:bg-[#3E5879]'
                        : 'hover:bg-[#D8C4B6] dark:hover:bg-[#3E5879]'
                }`}
            >
                Work
            </a>
            <a
                href="/notes"
                class={`px-4 py-2 rounded-full transition ${
                    currentPath === '/notes'
                        ? 'bg-[#D8C4B6] dark:bg-[#3E5879]'
                        : 'hover:bg-[#D8C4B6] dark:hover:bg-[#3E5879]'
                }`}
            >
                Notes
            </a>
        </nav>
    </div>
</header>
